<script>
function toggle(id, btn){
  const el = document.getElementById(id);
  if(el.style.display === "block"){
    el.style.display = "none";
    btn.textContent = "Lees meer";
  } else {
    el.style.display = "block";
    btn.textContent = "Sluiten";
  }
}
</script>

